<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://walletTradeActionBrowse.caption"
        focusComponent="walletTradeActionsTable"
        messagesPack="com.company.startup.web.screens.wallettradeaction">
    <data readOnly="true">
        <collection id="walletTradeActionsDc"
                    class="com.company.startup.model.entity.WalletTradeAction">
            <view extends="_local"/>
            <loader id="walletTradeActionsDl">
                <query>
                    <![CDATA[select e from startup_WalletTradeAction e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="walletTradeActionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="walletTradeActionsTable"
                dataLoader="walletTradeActionsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="walletTradeActionsTable"
                    width="100%"
                    dataContainer="walletTradeActionsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="currentPrice"/>
                <column id="asset"/>
                <column id="money"/>
                <column id="action"/>
                <column id="time"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="walletTradeActionsTable.create"/>
                <button id="editBtn" action="walletTradeActionsTable.edit"/>
                <button id="removeBtn" action="walletTradeActionsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
